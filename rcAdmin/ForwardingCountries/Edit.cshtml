            <li>
                <label for="country">Country:</label>
                <select id="country" name="country" @Validation.For("country")>
                    @foreach (var f in dataCountry)
                    {
                        <option value="@f.Id_Country" @if (country == f.Id_Country)
                                                      { <text> selected="selected" </text>           }>@rcFunctions.CleanRCNames(f.Country_Name)</option>
                    }
                </select> <img src="images/help.gif" alt="help" title="Select layout/theme for new page. All layouts are in rcLayouts folder - you can add/change/modify them to fit your needs" /> @Html.ValidationMessage("country")
            </li>

            <li>
                <label for="fwZone">Forwading Zone:</label>
                <select id="fwZone" name="fwZone" @Validation.For("fwZone")>
                    @foreach (var f in dataZone)
                    {
                        <option value="@f.Id_Forwarding_Zone" @if (fwZone == f.Id_Forwarding_Zone)
                                                              { <text> selected="selected" </text>            }>@rcFunctions.CleanRCNames(f.Forwarding_Zone)</option>
                    }
                </select> <img src="images/help.gif" alt="help" title="Select layout/theme for new page. All layouts are in rcLayouts folder - you can add/change/modify them to fit your needs" /> @Html.ValidationMessage("fwZone")
            </li>
            <li>
                <label for="pComment">Comments:</label>
                <input type="text" name="pComment" id="pComment" value="@pComment" maxlength="100" @Validation.For("pComment") /> <img src="images/help.gif" alt="help" title="Name of the new page. Ex.: about-us or contact-us" /> @Html.ValidationMessage("pComment")
            </li>
            </ol>
            
