<script type="text/javascript">
    var pageName = window.location.pathname.substring(window.location.pathname.lastIndexOf("/") + 1, window.location.pathname.lenght).toLowerCase();
    if (pageName.match("^editpage") || pageName.match("^newpage") || pageName.match("^widgetsinsection")) {
        $('#allpages').toggleClass('selected');

    } else if (pageName.match("^editwidget")) {
        $('#allwidgets').toggleClass('selected');

    } else if (pageName == "") {
        $('#default').toggleClass('selected');

    }
    $('#' + pageName).toggleClass('selected');
</script>