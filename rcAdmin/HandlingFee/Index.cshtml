@{
    Page.Title = "Handling Fee";
    var db = Database.Open("Checking_Master");
    //Database.OpenConnectionString("Checking_Master")

    //delete record 
    var deleteID = Request["id"];    
    if (!deleteID.IsEmpty())
    {
        var sqlDelete = "delete dbo.dbo.Handling_Fee where Id_Handing_Fee=@0";
        db.Execute(sqlDelete, deleteID);
        Response.Redirect("Index");
    }


    var qStr = "Select *, case when Handling_Fee_Type=0 then 'Fixed' else 'Transhipments' end as Handling_Fee_Name from dbo.Handling_Fee order by Id_Handing_Fee desc";
    var data = db.Query(qStr);    
    
    var grid = new WebGrid(source: data,
                            rowsPerPage: 20);

    
}
@section head {}
@section menu{
    @RenderPage("../_Menu.cshtml")
}
<div class="fluid">
<fieldset>
    <div class="widget">
        <div class="whead">
            <h6>All Forwarding Quotation | <a href="~/rcAdmin/HandlingFee/New">Create Handling Fee</a> </h6>
            <div class="clear"></div>
        </div>
    <div id="grid" class="widget">
        @grid.GetHtml(
                tableStyle: "tDark",
                headerStyle: "",
                alternatingRowStyle: "alt",
                footerStyle: "pgr",
                columns: grid.Columns(
                                    //grid.Column("Handling_Fee_Type", "Handling_Fee_Type", style: "rcGB"),
                                    grid.Column("Handling_Fee_Name", "Handling Fee", style: "rcGB"),
                                    grid.Column("Weight_From", "Weight From", style: "rcGB"),
                                    grid.Column("Weight_To", "Weight To", style: "rcGB"),
                                    grid.Column("Handling_Fee", "Handling Fee", style: "rcGB"),
                    grid.Column(format: @<a href="~/rcAdmin/HandlingFee/Edit?id=@item.Id_Handing_Fee" title="Edit Page"><img src="images/edit_page.gif" alt="Edit?id=@item.Id_Handing_Fee" class="rcGC" /></a>),
                    grid.Column(format: @<a href="Index?id=@item.Id_Handing_Fee" title="Delete" onclick="return confirm('Are you sure you want to delete ?')">
    <img src="images/delete.gif" alt="Delete" class="rcGC" />
</a>)
                   )
               )
    </div>
    </div>
</fieldset>
</div>