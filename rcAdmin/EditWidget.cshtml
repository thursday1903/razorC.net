    @RenderPage("_Menu.cshtml")
}
<div class="fluid">
    <form action="" method="post" id="editWidget">
        <fieldset>
            <div class="widget">
                <div class="whead">
                    <h6>Edit Widget | <a href="~/rcAdmin/AllWidgets">All Widgets</a> | <a href="~/rcAdmin/NewWidget">Create Widget</a> </h6>
                    <div class="clear"></div>
                </div>
                @*@errMSG
                Edited: @wEditDate*@
                <div class="formRow">
                    <div class="grid3">
                        <label for="wName">Name:</label></div>
                    <div class="grid9">
                        <input type="text" name="wName" id="wName" value="@wName" readonly="readonly" maxlength="100" /></div>
                    @*<img src="images/help.gif" alt="help" title="Name of the widget. You CANNOT change this" />*@
                    <div class="clear"></div>
                </div>
                <div class="formRow">
                    <div class="grid3">
                        <label for="wFile">Template:</label></div>
                    <div class="grid9">
                        <div class="selector">
                            <select id="wFile" class="selectReq" name="wFile">
                                @foreach (var f in fileInfo)
                                {
                                    <option value="@f.Name" @if (wFile == f.Name)
                                                            {<text>selected="selected"</text>}>@rcFunctions.CleanRCNames(f.Name)</option>
                                }
                            </select>
                        </div>
                        @*<img src="images/help.gif" alt="help" title="Template used to render widget - it changes the way how the content of this widget is displayed to end user. All templates are located in rcTemplates folder" />*@
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="formRow">
                    <div class="grid3">
                        <label for="wTitle">Title:</label></div>
                    <div class="grid9">
                        <input type="text" name="wTitle" id="wTitle" value="@wTitle"  maxlength="100" /></div>
                    @*<img src="images/help.gif" alt="help" title="Title of widget. Depending on selected template it will or will not be visible to end user" />*@
                    <div class="clear"></div>
                </div>
                <div class="formRow">
                    <textarea id="wText" name="wText" cols="80" rows="15">@wText</textarea>
                    <div class="clear"></div>
                </div>
                <div class="formRow">
                    <input type="submit" name="btnUpdate" value="Update" class="buttonM bBlue formSubmit" />
                    <div class="selector">
                        <select id="rcBackup" class="selectReq" name="rcBackup">
                            <option value="-1">Load from backup</option>
                            @foreach (var f in dataBackups.Take(5))
                            {
                                <option value="@f.Id">@f.pwDate</option>
                            }
                            <option value="0">Load current version</option>
                        </select>
                    </div>
                    @*<img src="images/help.gif" alt="help" title="Load content from backup. Every time you update widget/page razorC will create backup of that widget/page. By default last 5 version of widget/page are stored in rc_Backups table." />*@
                </div>
            </div>
        </fieldset>
    </form>
</div>
