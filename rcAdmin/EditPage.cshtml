<div class="fluid">
    <form action="" method="post" id="editPage">
        <fieldset>
            <div class="widget">
                <div class="whead">
                    <h6>Edit Page | <a href="~/rcAdmin/AllPages">All Pages</a> | <a href="~/rcAdmin/NewPage">Create Page</a> </h6>
                    <div class="clear"></div>
                </div>
                @*@errMSG
                Edited: @pEditDate*@
                <div class="formRow">
                    <div class="grid3">
                        <label for="pName">Name:</label>
                    </div>
                    <div class="grid9">
                        <input type="text" name="pName" id="pName" value="@pName" readonly="readonly" maxlength="100" />
                        @*<img src="images/help.gif" alt="help" title="Name of the page. You CANNOT change this." />*@
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="formRow">
                    <div class="grid3">
                        <label for="pMasterPage">Layout:</label>
                    </div>
                    <div class="grid9">
                        <div class="selector">
                            <select id="pMasterPage" name="pMasterPage" class="selectReq">
                                @foreach (var f in fileInfo)
                                {
                                    <option value="@f.Name" @if (pMasterPage == f.Name)
                                                            {<text>selected="selected"</text>}>@rcFunctions.CleanRCNames(f.Name)</option>
                                }
                            </select>
                            @*<img src="images/help.gif" alt="help" title="Layout/theme that razorC will use to render the page. All layouts are in rcLayouts folder - you can change/modify them to fit your needs" />*@
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="formRow">
                    <div class="grid3"><label for="pTitle">Title:</label></div>
                    <div class="grid9"><input type="text" name="pTitle" id="pTitle" value="@pTitle"  maxlength="250" /></div>
                    @*<img src="images/help.gif" alt="help" title="Title of the page. Depending on template for body section (located in rcTemplates\Body\ folder) it will or will not be visible to end user" />*@
                    <div class="clear"></div>
                </div>
                <div class="formRow">
                    <div class="grid3"><label for="pBody">Body template:</label></div>
                    <div class="grid9">
                        <div class="selector">
                            <select id="pBodyFile" class="selectReq" name="pBodyFile">
                                @foreach (var fName in pBodies)
                                {
                                    <option value="@fName" @if (pBodyFile == fName)
                                                           {<text>selected="selected"</text>}>@rcFunctions.CleanRCNames(fName)</option>
                                }
                            </select>
                            @*<img src="images/help.gif" alt="help" title="Template that will be used to render a body part of your page. All body templates are in rcTempaltes/Body folder - you can add/change/modify them to fit your needs" />*@
                            Render body:<input id="pBody" name="pBody" type="checkbox" @if (pBody)
                                                                                       {<text>checked="checked"</text>} />
                            @*<img src="images/help.gif" alt="help" title="Should be selected for most of the pages, unless you need page that ONLY renders widgets in sections..." />*@
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="formRow">
                    <textarea id="pText" name="pText" cols="80" rows="15">@pText</textarea>
                    <div class="clear"></div>
                </div>
                <div class="formRow">
                    <input type="submit" name="btnUpdate" value="Update" class="buttonM bBlue formSubmit" />
                    <div class="selector">
                        <select id="rcBackup" class="selectReq" name="rcBackup">
                            <option value="-1">Load from backup</option>
                            @foreach (var f in dataBackups.Take(5))
                            {
                                <option value="@f.Id">@f.pwDate</option>
                            }
                            <option value="0">Load current version</option>
                        </select>
                    </div>
                    <div class="clear"></div>
                </div>
                
                @*<img src="images/help.gif" alt="help" title="Load content from backup. Every time you update widget/page razorC will create backup of that widget/page. By default last 5 version of widget/page are stored in rc_Backups table." />*@
            </div>
        </fieldset>


        <fieldset>
            <div class="widget">
                <div class="whead">
                    <h6>Edit Meta Tags</h6>
                    <div class="clear"></div>
                </div>
                <div class="formRow">
                    <div class="grid3"><label for="mTitle">Title:</label></div>
                    <div class="grid9"><input type="text" name="mTitle" id="mTitle" value="@mTitle" maxlength="100" /></div>
                    <div class="clear"></div>
                    @*<img src="images/help.gif" alt="help" title="Meta tag: Title" />*@
                </div>
                <div class="formRow">
                    <div class="grid3"><label for="mDescription">Description:</label></div>
                    <div class="grid9"><input type="text" name="mDescription" id="mDescription" value="@mDescription" maxlength="200" /></div>
                    @*<img src="images/help.gif" alt="help" title="Meta tag: Description" />*@
                    <div class="clear"></div>
                </div>
                <div class="formRow">
                    <div class="grid3"><label for="mKeywords">Keywords:</label></div>
                    <div class="grid9"><input type="text" name="mKeywords" id="mKeywords" value="@mKeywords" maxlength="200" /></div>
                    @*<img src="images/help.gif" alt="help" title="Meta tag: keywords" />*@
                    <div class="clear"></div>
                </div>
            </div>
        </fieldset>
    </form>
</div>
